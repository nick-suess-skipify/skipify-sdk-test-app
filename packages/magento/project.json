{
    "name": "magento",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/magento/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/vite:build",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/magento"
            },
            "dependsOn": ["^build", "shared:build"],
            "configurations": {
                "local": {
                    "mode": "development",
                    "fileReplacements": [
                        {
                            "replace": "packages/shared/src/environments/environment.ts",
                            "with": "packages/shared/src/environments/environment.local.ts"
                        }
                    ]
                },
                "dev": {
                    "mode": "development",
                    "fileReplacements": [
                        {
                            "replace": "packages/shared/src/environments/environment.ts",
                            "with": "packages/shared/src/environments/environment.dev.ts"
                        }
                    ]
                },
                "stage": {
                    "mode": "staging",
                    "fileReplacements": [
                        {
                            "replace": "packages/shared/src/environments/environment.ts",
                            "with": "packages/shared/src/environments/environment.stage.ts"
                        }
                    ]
                },
                "prod": {
                    "mode": "production",
                    "fileReplacements": [
                        {
                            "replace": "packages/shared/src/environments/environment.ts",
                            "with": "packages/shared/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/magento/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/magento/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
